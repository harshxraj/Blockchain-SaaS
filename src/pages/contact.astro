---
// Import your necessary components
import DefaultLayout from "../layouts/Default.astro";
import InteriorHero from "../components/InteriorHero.astro";
import InteriorContent from "../components/InteriorContent.astro";
import { CutCornerButton } from "../components/CutCornerButton";
import Input from "../components/Input.astro";
---

<DefaultLayout>
    <InteriorHero>
        <p class="uppercase font-extrabold text-center text-zinc-500 -tracking-wider">Let's Talk</p>
        <h1 class="font-heading font-black text-5xl md:text-6xl lg:text-7xl text-center mt-4">Contact Us</h1>
        <p class="text-center text-xl md:text-2xl mt-6 max-w-xl mx-auto text-zinc-400">
            We're here to help and answer any questions you may have. Reach out to us to learn more about our services, get support, or to apply for positions.
        </p>
    </InteriorHero>
    <InteriorContent>
        <div class="max-w-xl mx-auto">
            <h2 class="font-heading font-black text-3xl">What can we help you with?</h2>
            <form class="flex flex-col mt-8">

                <!-- Name Input Field -->
                <label for="name">Name</label>
                <Input name="name" id="name" type="text" class="bg-white" />

                <!-- Email Input Field -->
                <label for="email" class="mt-4">Email</label>
                <Input type="email" name="email" id="email" class="bg-white" />

                <!-- Message Textarea Field -->
                <label for="message" class="mt-4">Message</label>
                <div class="relative group z-0">
                    <div class="absolute inset-0 outline outline-2 -outline-offset-2 outline-zinc-700 [mask-image:linear-gradient(225deg,transparent,transparent_10px,black,black_10px)] -z-10 group-focus-within:outline-fuchsia-500">
                    </div> 
                    <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    class="absolute top-0 right-0 text-zinc-700 group-focus-within:text-fuchsia-500 -z-10"
                    >
                    <path d="M0 1H12.2667L23 11.7333V24" stroke="currentColor" stroke-width="2"></path>
                  </svg>
                    <textarea name="message" id="message" class="resize-none py-2 bg-transparent outline-none px-4 w-full z-20 h-32"></textarea>
                </div>

                <!-- Button -->
                <CutCornerButton className="mt-4">Send Message</CutCornerButton>
            </form>
        </div>
    </InteriorContent>
</DefaultLayout>
