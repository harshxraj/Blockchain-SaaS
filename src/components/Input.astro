---
const {name, id, type} = Astro.props;
---

<div class="relative group z-0">
    <div class="absolute inset-0 outline outline-2 -outline-offset-2 outline-zinc-700 [mask-image:linear-gradient(225deg,transparent,transparent_10px,black,black_10px)] -z-10 group-focus-within:outline-fuchsia-500">
    </div> 
    <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="absolute top-0 right-0 text-zinc-700 group-focus-within:text-fuchsia-500 -z-10"
  >
    <path d="M0 1H12.2667L23 11.7333V24" stroke="currentColor" stroke-width="2"></path>
  </svg>
    <input type={type} name={name} id={id} class="bg-transparent h-12 w-full outline-none px-4 z-20 mt-1">
</div>